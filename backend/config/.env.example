# 服务器配置
ZHULONG_SERVER_HOST=localhost
ZHULONG_SERVER_PORT=8888

# S3 兼容存储 (例如 MinIO, RustFS) 配置
ZHULONG_S3_HOST=localhost
ZHULONG_S3_PORT=9000
ZHULONG_S3_ACCESS_KEY_ID=your-access-key
ZHULONG_S3_SECRET_ACCESS_KEY=your-secret-key
ZHULONG_S3_BUCKET=zhulong-videos
ZHULONG_S3_REGION=us-east-1
ZHULONG_S3_USE_SSL=false

# 应用配置
ZHULONG_APP_NAME=Zhulong Video Server
ZHULONG_APP_VERSION=v1.0.0
ZHULONG_APP_DEBUG=true

# JWT 配置（可选）
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# 文件上传配置
UPLOAD_MAX_SIZE=2GB
UPLOAD_ALLOWED_TYPES=video/mp4,video/avi,video/mov,video/webm

# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password
POSTGRES_DBNAME=zhulong
POSTGRES_SSLMODE=disable

# 环境
NODE_ENV=development